# Production Environment Variables
# Copy this to .env on your server and update with actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=change-this-root-password
MYSQL_DATABASE=skedadel_fleet
MYSQL_USER=skedadel
MYSQL_PASSWORD=change-this-db-password

# Application Configuration
NODE_ENV=production
PORT=5000
USE_SQL_DATABASE=true

# Database Connection (for app container)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=skedadel_fleet
DB_USER=skedadel
DB_PASSWORD=change-this-db-password

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-string
JWT_EXPIRE=30d

# Optional: External API Keys
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# TOOKAN_API_KEY=your-tookan-key
